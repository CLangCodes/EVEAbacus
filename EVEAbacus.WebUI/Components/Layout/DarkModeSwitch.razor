
<MudButton EndIcon="@Icons.Material.Filled.DarkMode" OnClick="OnButtonClick"></MudButton>
<i class="fa-solid fa-right-to-bracket" style="color: #059669;"></i>

@code {
    [CascadingParameter] public bool _isDarkMode { get; set; } = true;
    [Parameter] public EventCallback ToggleDarkModeEvent { get; set; }

    void OnButtonClick() => ToggleDarkModeEvent.InvokeAsync(); 
}
