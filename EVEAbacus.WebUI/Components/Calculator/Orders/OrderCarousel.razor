@using EVEAbacus.Domain.Models.Calculator

<CascadingValue Value="CalculatorService">
    <MudCarousel TData="Order" Class="mud-width-full" @ref="_carousel" 
    ItemsSource="@(CalculatorService?.Orders ?? Enumerable.Empty<Order>())" Style="height:200px;"
    ShowArrows="true" ShowBullets="false" EnableSwipeGesture="true" AutoCycle="false">
        <ItemTemplate>
            <OrderCard Order="@context" />
        </ItemTemplate>
    </MudCarousel>
</CascadingValue>

@code {
    [CascadingParameter] public CalculatorService? CalculatorService { get; set; }
    public MudCarousel<Order>? _carousel;
}
