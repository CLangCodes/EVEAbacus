@using EVEAbacus.Domain.Models.Calculator

<CascadingValue Value="CalculatorService">
    <MudCarousel T="Order" Class="mud-width-full" @ref="_carousel" 
    ItemsSource="@CalculatorService.Orders" Style="height:200px;"
    ShowArrows="true" ShowBullets="false" EnableSwipeGesture="true" AutoCycle="false">
        <ItemTemplate>
            <OrderCard Order="@context" />
        </ItemTemplate>
    </MudCarousel>
</CascadingValue>

@code {
    [CascadingParameter] required public CalculatorService CalculatorService { get; set; }
    private MudCarousel<Order> _carousel;
}
