@using EVEAbacus.Domain.Models.Calculator
@using System.Text.RegularExpressions
<MudTabs Outlined="true" Position="@Position" Rounded="true" Border="false"
ApplyEffectsToContainer="true" Class="mt-8" PanelClass="pa-6">
    @foreach (var procurementPlan in SupplyPlan.ProcurementPlans)
    {
        var solSys = Regex.Match(procurementPlan.StationName, @"^([\w\-]+)");
        <MudTabPanel Text="@solSys.Value">
        @* <MudTabPanel Text="@procurementPlan.StationName"> *@
            <MudText><ProcurementPlanContainer ProcurementPlan="procurementPlan" /></MudText>
        </MudTabPanel>
    }
</MudTabs>

@code {
    [Parameter] public SupplyPlan SupplyPlan { get; set; } = default!;
    public Position Position { get; set; } = Position.Left;
}
