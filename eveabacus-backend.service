[Unit]
Description=EVE Abacus Backend API
After=network.target

[Service]
WorkingDirectory=/var/www/eveabacus
ExecStart=/usr/bin/dotnet EVEAbacus.WebUI.dll
Restart=always
RestartSec=10
SyslogIdentifier=eveabacus
User=eveabacus
Environment=ASPNETCORE_ENVIRONMENT=Production
Environment=ASPNETCORE_URLS=http://localhost:5000
Environment=ConnectionStrings__EVEAbacus=Server=localhost;Database=eveabacus;User=root;Password=your_password_here;

[Install]
WantedBy=multi-user.target 